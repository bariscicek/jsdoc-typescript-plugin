{
    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "include": [
            "node_modules/falcor/lib/HttpDataSource.js",
            "node_modules/falcor/lib/Model.js",
            "node_modules/falcor/lib/response/ModelResponse.js",
            "node_modules/falcor/lib/typedefs"
        ]
    },
    "plugins": [
        "plugins/typescript"
    ],
    "typescript": {
        "rootModuleName": "falcor",
        "outDir": "./typings",
        "headerFile": "./content/falcor_header.ts",
        "footerFile": "./content/falcor_footer.ts",
        "declareTopLevelElements": false,
        "initialIndentation": 1,
        "outputDocletDefs": false,
        "rewriteFunctionTypedefs": true,
        "useUnionTypeForStringEnum": true
    }
}